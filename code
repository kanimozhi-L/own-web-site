<body>
  <div id="app">
    <!-- Login view -->
    <div id="loginView" class="center">
      <div class="card" role="region" aria-labelledby="loginTitle">
        <h1 id="loginTitle">Welcome back</h1>
        <p class="lead">Sign in to access your courses</p>

        <form id="loginForm" onsubmit="return false;" autocomplete="off">
          <div>
            <label for="username">Username</label>
            <input id="username" name="username" type="text" placeholder="student" required>
          </div>
          <div style="margin-top:12px">
            <label for="password">Password</label>
            <input id="password" name="password" type="password" placeholder="password" required>
          </div>

          <div class="actions">
            <button id="loginBtn" class="primary" type="submit">Sign in</button>
            <button id="demoBtn" class="ghost" type="button">Use demo creds</button>
          </div>

          <div id="err" class="error" role="alert">Invalid credentials</div>
        </form>
      </div>
    </div>

    <!-- Courses view (hidden until login) -->
    <div id="coursesView" style="display:none">
      <header class="siteHeader">
        <div class="brand">
          <div class="logo">CW</div>
          <div>
            <div style="font-weight:700">Course Website</div>
            <div style="font-size:13px;color:var(--muted)">Student dashboard</div>
          </div>
        </div>
        <nav>
          <button id="logoutBtn" class="logout">Logout</button>
        </nav>
      </header>

      <main class="container">
        <section class="hero">
          <div>
            <h2>Your courses</h2>
            <p style="color:var(--muted);margin:6px 0 0">Welcome — the following courses are available to you.</p>
          </div>
          <div style="text-align:right;color:var(--muted)">
            <div id="welcomeUser" style="font-weight:600"></div>
            <div style="font-size:13px">Member since 2025</div>
          </div>
        </section>

        <section class="courses" id="coursesList">
          <!-- Course cards will be injected by JS -->
        </section>
      </main>
    </div>
  </div>

  <script>
    // Demo credentials
    const DEMO_USER = 'student';
    const DEMO_PASS = 'password';

    const loginView = document.getElementById('loginView');
    const coursesView = document.getElementById('coursesView');
    const loginForm = document.getElementById('loginForm');
    const err = document.getElementById('err');
    const welcomeUser = document.getElementById('welcomeUser');

    const courses = [
      {title: 'HTML & CSS Fundamentals', desc: 'Learn the building blocks of the web.'},
      {title: 'JavaScript for Beginners', desc: 'Interactive programming and DOM manipulation.'},
      {title: 'Responsive Design', desc: 'Create layouts that work on any device.'},
      {title: 'Backend Basics', desc: 'Intro to servers, databases and APIs.'},
      {title: 'Project Capstone', desc: 'Build a complete website from scratch.'}
    ];

    function showCourses(username){
      // populate welcome
      welcomeUser.textContent = username;

      // populate course cards
      const list = document.getElementById('coursesList');
      list.innerHTML = '';
      for(const c of courses){
        const card = document.createElement('article');
        card.className = 'course';
        card.innerHTML = `<h3>${escapeHtml(c.title)}</h3><p>${escapeHtml(c.desc)}</p>`;
        list.appendChild(card);
      }

      // switch views
      loginView.style.display = 'none';
      coursesView.style.display = 'block';
    }

    function escapeHtml(s){
      return s.replace(/[&<>"']/g, ch => ({'&':'&amp;','<':'&lt;','>':'&gt;','"':'&quot;','\'':'&#39;'}[ch]));
    }

    // Simple client-side login (demo only) - do not use for real auth
    document.getElementById('loginBtn').addEventListener('click', () => {
      const user = document.getElementById('username').value.trim();
      const pass = document.getElementById('password').value;
      err.style.display = 'none';

      if(!user || !pass){
        err.textContent = 'Please enter username and password';
        err.style.display = 'block';
        return;
      }

      // Check demo credentials
      if(user === DEMO_USER && pass === DEMO_PASS){
        showCourses(user);
      } else {
        err.textContent = 'Invalid credentials — try "student" / "password"';
        err.style.display = 'block';
      }
    });

    document.getElementById('demoBtn').addEventListener('click', () => {
      document.getElementById('username').value = DEMO_USER;
      document.getElementById('password').value = DEMO_PASS;
    });

    document.getElementById('logoutBtn').addEventListener('click', () => {
      // clear inputs and return to login
      document.getElementById('username').value = '';
      document.getElementById('password').value = '';
      err.style.display = 'none';
      coursesView.style.display = 'none';
      loginView.style.display = 'flex';
    });
  </script>
</body>
</html>
